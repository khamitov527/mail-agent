{
  "manifest_version": 3,
  "name": "Voice Command Assistant",
  "version": "1.0",
  "description": "Control any website with voice commands using AI interpretation",
  "permissions": ["activeTab", "scripting", "audioCapture", "notifications", "contextMenus", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["env-loader.js", "dom-parser.js", "openai-service.js", "action-executor.js", "content.js"]
  }],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png"
  },
  "web_accessible_resources": [{
    "resources": [".env"],
    "matches": ["<all_urls>"]
  }]
} 